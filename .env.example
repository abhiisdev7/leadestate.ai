# === REQUIRED: AI (Chat) ===
GOOGLE_GENERATIVE_AI_API_KEY="your-google-generative-ai-api-key"

# === REQUIRED: Database ===
# Option A: Full connection string
DATABASE_URL="mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority"

# Option B: Individual credentials (used if DATABASE_URL is not set)
# DB_USERNAME=""
# DB_PASSWORD=""
# DATABASE_NAME=""

# === REQUIRED: SMTP (Meeting confirmation emails) ===
# For Gmail: use App Password (not regular password). Google Account → Security → App passwords
# For Vercel: add these in Project → Settings → Environment Variables (Production)
SMTP_MAIL="your-email@gmail.com"
SMTP_MAIL_PASSWORD="your-app-password"
SMTP_MAIL_HOST="smtp.gmail.com"
SMTP_MAIL_PORT=587

# === Optional (set automatically) ===
# NODE_ENV=development|production
