# === REQUIRED: AI (Chat) - Google Gemini ===
GOOGLE_GENERATIVE_AI_API_KEY="your-google-generative-ai-api-key"

# === DATABASE CONFIGURATION ===
# Option A: Full connection string
DATABASE_URL="mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=Cluster0"

# Option B: Individual credentials (used if DATABASE_URL is not set)
# DB_USERNAME=""
# DB_PASSWORD=""
# DATABASE_NAME=""

# === IMAP EMAIL SERVICE CONFIGURATION ===
# For email observer (cancellation replies). Gmail uses same credentials as SMTP.
IMAP_MAIL="your-email@gmail.com"
IMAP_MAIL_PASSWORD="your-app-password"
IMAP_MAIL_HOST="imap.gmail.com"
IMAP_EMAIL_PORT=993

# === SMTP EMAIL SERVICE CONFIGURATION ===
# For meeting confirmation emails. Gmail: use App Password (not regular password).
# Google Account → Security → 2-Step Verification → App passwords
SMTP_MAIL="your-email@gmail.com"
SMTP_MAIL_PASSWORD="your-app-password"
SMTP_MAIL_HOST="smtp.gmail.com"
SMTP_MAIL_PORT=587

# === Optional ===
# CRON_SECRET="your-secret"  # Protects /api/cron/email-observer (set in Vercel for cron)
